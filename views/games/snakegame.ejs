<%- include('../structure/header') -%>
        <link rel="stylesheet" href="/static/game/snake.css" />
    </head>
<body onload="startGame()">

    <div class="game-container">
            <canvas width="100%" height="100%" id="gamearea"></canvas>
    </div>
    <div class="game-over-container" id="gameOver">
        <form action="/games/tatakaesnake/<%=id%>/updatescore?_method=PUT" method="POST">
            <div class="game-over-card">
                <div class="game-over-text">Game Over</div>
                <input class="game-over-score" name="score" readonly id="game-over-score"/>
                <button class="leaderboard-btn" id="leaderboardsBtn" type="submit">Leaderboards</button>
            </div>
        </form>
    </div>
    <div class="game-details" id="gameDetails">
        <div class="game-details-container">
            <div class="snakegameimage"></div>
            <div class="scoredetails">
                <div class="score">SCORE</div>
                <div class="score-number"  id="scoreNumber">0</div>
            </div>
        </div>
    </div>


<script src="/static/game/snake.js"></script>
<%- include('../structure/footer') -%>

